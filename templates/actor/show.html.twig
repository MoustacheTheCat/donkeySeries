{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    
<div class="container-fluid">
    <div class="media">
        <div class="media-body">
            <h1>{{ actor.name }}</h1>
            
        </div>
        <div>
            <h2>Series List</h2>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>title</th>
                                <th>Summary</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for serie in series %}
                                <tr>
                                    <td><a href="{{path('app_program_show', {'id': serie.id })}}">{{serie.title}}</a></td>
                                    <td>{{ serie.summary}}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2">Aucun Séries trouvé</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('app_program_shows' ) }}"> Retour à la liste des series</a>
        </div>
    </div>
    
</div>
{% endblock %} 
