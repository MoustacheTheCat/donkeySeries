{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    
<div class="container-fluid mx-0 mx-md-auto my-5">
    <div class="row mx-0 mx-md-auto my-5">
        <div class="col-12">
            <h1 class="text-center pt-5 mt-5">{{ actor.name }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 mx-auto my-5">
            <table class="table table-striped table-hover align-middle text-center">
                <thead>
                    <tr>
                        <th>title</th>
                        <th>Summary</th>
                    </tr>
                </thead>
                <tbody>
                    {% for serie in series %}
                        <tr>
                            <td><a href="{{path('app_program_show', {'program_slug': serie.slug })}}" class="link-saison">{{serie.title}}</a></td>
                            <td>{{ serie.summary}}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">Aucun Séries trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row d-flex justify-content-evenly text-center mx-auto">
        <div class="col-12 my-3 mx-auto">
            <a href="{{ path('app_program_shows') }}" class="btn btn-card-home"> Retour à la liste Séries</a>
        </div>
    </div>
</div>
{% endblock %} 
