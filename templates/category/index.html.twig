{% extends 'base.html.twig' %}

{% block title %}{{page_title}} - Donkey Series{% endblock %}

{% block body %}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
             <h1>Liste des {{page_title}}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Categorie</th>
                    <th>Nombre de series</th>
                </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><a href="{{path("app_category_show", { categoryName: category.name })}}">{{category.name}}</a></td>
                            <td>{{ category.programs.count}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('app_index') }}">Retour Ã  l'accueil</a>
        </div>
    </div>
</div>
{% endblock %}
