{% extends 'base.html.twig' %}

{% block title %}{{page_title}} Donkey episodes{% endblock %}

{% block body %}


<div class="container-fluid">
    <h1>{{page_title}}</h1>

   {% for episode in episodes %}
    <div class="row">
        <div class="col-md-12">
            <p><a href="{{path('app_episode_show', {'id': episode.id})}}">{{episode.title}}</a></p>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
