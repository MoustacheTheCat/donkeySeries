{% extends 'base.html.twig' %}

{% block title %}{{page_title}} Donkey Series{% endblock %}

{% block body %}


<div class="container-fluid">
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
        {% for season in seasons%}
            <ul>
                <li>
                    
                    <a href="{{ path('app_program_show_season', {'program_id': program.id, 'season_id': season.id}) }}">
                        Saison {{ season.number }}
                    </a>
                    Nombre d'épisode : {{ season.episodes.count }} 
                </li>
            </ul>
        {% else %}
            <p>Aucune saison n'est disponible pour le moment</p>
        {% endfor %}
        <strong>Acteurs :</strong>
        <ul>
            {% for actor in program.actors %}
                <li><a href="{{ path('app_actor_show', {'id': actor.id}) }}">{{ actor.name }}  </a></li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a href="{{ path('app_program_shows' ) }}"> Retour à la liste des series</a>
        </div>
        <div class="col-md-6">
            <a href="{{ path('app_category_shows') }}">Retour à la liste de categories</a>
        </div>
    </div>
</div>
{% endblock %}
