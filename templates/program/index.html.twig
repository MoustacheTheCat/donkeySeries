{% extends 'base.html.twig' %}

{% block title %}{{page_title}} Donkey Series{% endblock %}

{% block body %}


<div class="container-fluid">
    <h1>{{page_title}}</h1>

       {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("app_program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    
    <div class="row">
        <div class="col-md-6">
            <a href="{{ path('app_index') }}">Retour à l'accueil</a>
        </div>
        <div class="col-md-6">
            <a href="{{ path('app_category_shows') }}">Retour à la liste de categories</a>
        </div>
    </div>
</div>
{% endblock %}
