{% extends 'base.html.twig' %}

{% block title %}{{page_title}} Donkey episodes{% endblock %}

{% block body %}


<div class="container-fluid">
    <h1>{{page_title}}</h1>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Program</th>
                    <th>Season</th>
                    <th>Episode</th>
                    <th>Title</th>
                    <th>Synopsis</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{program.title}}</td>
                        <td>Saison {{ season.number }}</td>
                        <td>{{episode.number}}</td>
                        <td>{{episode.title}}</td>
                        <td>{{episode.synopsis}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('app_program_show_season', {'program_id': program.id, 'season_id': season.id}) }}"> Retour à la liste des Episode de la saison {{ season.number }} de {{ program.title }}</a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('app_program_show', {'id': program.id} ) }}"> Retour à la liste des saisons de {{ program.title }}</a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('app_program_shows' ) }}"> Retour à la liste des series</a>
        </div>
    </div>
</div>
{% endblock %}